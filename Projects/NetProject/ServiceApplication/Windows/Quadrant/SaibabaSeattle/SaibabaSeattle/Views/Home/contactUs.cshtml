
@{
    ViewBag.Title = "contactUs";
}

<!--Contact page content-->
<div class="stl-glb-ctnr afb-clear " id="contact">
    <h1>Contact Us</h1>
    <hr class="stl-hr" />
    <div class="stl-ctnr-one stl-glb-ctnr">
        <div class="form-body">
            <form method="post" id="stlContact">
                <div class="entry-feild">
                    <label for="fname">Name*</label>
                    <input type="text" id="fname" name="fname" placeholder="Enter Your Name" required />
                </div>
                <div class="entry-feild">
                    <label for="mobile">Phone number</label>
                    <input type="text" id="mobile" name="mobile" placeholder="Enter Phone Number" onkeypress="return isNumber(event)" required title="Enter only numbers" />
                </div>
                <div class="entry-feild">
                    <label for="email">Email address*</label>
                    <input type="email" id="email" name="email" placeholder="Enter Your Email" required />
                </div>
                <div class="entry-feild">
                    <label for="message">Comments and questions*</label>
                    <textarea name="message" id="message" placeholder="Enter Your Comments and questions" required></textarea>
                </div>
                <div class="g-recaptcha" data-sitekey="6LfsOGoUAAAAAIDHFo_QLQTZ5mr9kMxw3J4K-m6G"></div>
                <div class="entry-feild text-center">
                    <span class="rqd-feilds-txt stl-dinb">
                        <p><span>&bigstar;</span> - required fields.</p>
                    </span>
                    <button class="btn stl-btn stl-send stl-dinb" type="submit">Send Us</button>
                    @if (ViewBag.message != null)
                    {
                    
                    <p style="color:green";>@ViewBag.message</p>
              
                    }

                </div>
            </form>
        </div>
    </div>
</div>
