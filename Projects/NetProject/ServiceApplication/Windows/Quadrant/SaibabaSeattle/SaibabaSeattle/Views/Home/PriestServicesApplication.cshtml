
@{
    ViewBag.Title = "PriestServicesApplication";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Preist Services Application page content-->
<div class="stl-glb-ctnr afb-clear">

    <h1>Priest Services Application</h1>
    <hr class="stl-hr" />
    <div class="stl-glb-ctnr">
        <div class="stl-glb-ctnt">
            <div class="col-sm-6">
                <a class="btn stl-btn" href="~/Docs/Priest_Services_Application.docx" target="top">Priest Services Application</a>
            </div>
            <div class="col-sm-6">
                <a class="btn stl-btn" href="/Home/LogOut">Logout</a>
            </div>
        </div>

    </div>
    <div class="stl-glb-ctnr afb-clear " id="PriestServicesAplication">
        <div class="stl-ctnr-one stl-glb-ctnr">
            <div class="form-body sl-ps-frm-bdy">
                <form method="post" id="stlPriestServices">
                    <div class="entry-feild clearfix">
                        <div class="col-sm-6">
                            <label for="psname">Name*</label>
                            <input type="text" id="psname" name="psname" placeholder="Enter Your Name" required />
                        </div>
                        <div class="col-sm-6">
                            <label for="pspnum">Phone number</label>
                            <input type="text" id="pspnum" name="pspnum" placeholder="Enter Phone Number" onkeypress="return isNumber(event)" required title="Enter only numbers" />
                        </div>
                    </div>

                    <div class="entry-feild clearfix">
                        <div class="col-sm-6">
                            <label for="psemail">Email address*</label>
                            <input type="email" id="email" name="psemail" placeholder="Enter Your Email" required />
                        </div>
                        <div class="col-sm-6">
                            <label for="psmount">Amount*</label>
                            <input type="text" id="psmount" name="psmount" placeholder="Enter Amount" required title="Enter only numbers" />
                        </div>
                    </div>

                    <div class="entry-feild clearfix">
                        <div class="col-sm-6">
                            <label for="psadress">Address*</label>
                            <textarea name="psadress" id="psadress" placeholder="Enter Your Address" required></textarea>
                        </div>
                        <div class="col-sm-6">
                            <label for="psdetails">Event Details*</label>
                            <textarea name="psdetails" id="psdetails" placeholder="Enter Event Details" required></textarea>
                        </div>
                    </div>
                    <div class="entry-feild clearfix">
                        @*<div class="col-sm-6">
                                <label for="pstdate">Today's Date*</label>
                                <input type="date" id="pstdate" name="pstdate" required />
                            </div>*@
                        <div class="col-sm-6">
                            <label for="psedate">Event Date*</label>
                            <input type="date" id="psedate" name="psedate" required />
                        </div>
                        <div class="col-sm-6">
                            <label for="psetime">Event Time*</label>
                            <select required id="psetime" name="psetime">
                                <option selected disabled>--Select Event Time--</option>
                                <option value="12:00am">12:00am</option>
                                <option value="12:30am">12:30am</option>
                                <option value="1:00am">1:00am</option>
                                <option value="1:30am">1:30am</option>
                                <option value="2:00am">2:00am</option>
                                <option value="2:30am">2:30am</option>
                                <option value="3:00am">3:00am</option>
                                <option value="3:30am">3:30am</option>
                                <option value="4:00am">4:00am</option>
                                <option value="4:30am">4:30am</option>
                                <option value="5:00am">5:00am</option>
                                <option value="5:30am">5:30am</option>
                                <option value="6:00am">6:00am</option>
                                <option value="6:30am">6:30am</option>
                                <option value="7:00am">7:00am</option>
                                <option value="7:30am">7:30am</option>
                                <option value="8:00am">8:00am</option>
                                <option value="8:30am">8:30am</option>
                                <option value="9:00am">9:00am</option>
                                <option value="9:30am">9:30am</option>
                                <option value="10:00am">10:00am</option>
                                <option value="10:30am">10:30am</option>
                                <option value="11:00am">11:00am</option>
                                <option value="11:30am">11:30am</option>
                                <option value="12:00pm">12:00pm</option>
                                <option value="12:30pm">12:30pm</option>

                                <option value="1:00pm">1:00pm</option>
                                <option value="1:30pm">1:30pm</option>
                                <option value="2:00pm">2:00pm</option>
                                <option value="2:30pm">2:30pm</option>
                                <option value="3:00pm">3:00pm</option>
                                <option value="3:30pm">3:30pm</option>
                                <option value="4:00pm">4:00pm</option>
                                <option value="4:30pm">4:30pm</option>
                                <option value="5:00pm">5:00pm</option>
                                <option value="5:30pm">5:30pm</option>
                                <option value="6:00pm">6:00pm</option>
                                <option value="6:30pm">6:30pm</option>
                                <option value="7:00pm">7:00pm</option>
                                <option value="7:30pm">7:30pm</option>
                                <option value="8:00pm">8:00pm</option>
                                <option value="8:30pm">8:30pm</option>
                                <option value="9:00pm">9:00pm</option>
                                <option value="9:30pm">9:30pm</option>
                                <option value="10:00pm">10:00pm</option>
                                <option value="10:30pm">10:30pm</option>
                                <option value="11:00pm">11:00pm</option>
                                <option value="11:30pm">11:30pm</option>
                            </select>
                        </div>
                    </div>
                    <div class="entry-feild clearfix">

                        <div class="col-sm-12">
                            <label for="pspayment">Payment Ref Number / Status of Payment*</label>
                            <input type="text" id="pspayment" name="pspayment" placeholder="Payment Ref Number / Status of Payment" required />
                        </div>
                    </div>
                    <div class="entry-feild clearfix">
                        <div class="col-sm-12">
                            <label for="psadscmts">Additional Comments*</label>
                            <textarea name="psadscmts" id="psadscmts" placeholder="Additional Comments" required></textarea>
                        </div>
                    </div>
                    @*<div class="g-recaptcha" data-sitekey="6LfsOGoUAAAAAIDHFo_QLQTZ5mr9kMxw3J4K-m6G"></div>*@
                    <div class="entry-feild text-center clearfix">
                        <span class="rqd-feilds-txt stl-dinb">
                            <p><span>&bigstar;</span> - required fields.</p>
                        </span>
                        <button class="btn stl-btn stl-send stl-dinb" type="submit">Submit</button>
                        @if (ViewBag.message != null)
                        {

                            <p style="color:green" ;>@ViewBag.message</p>

                        }

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<!--Preist Services Application page content End-->
