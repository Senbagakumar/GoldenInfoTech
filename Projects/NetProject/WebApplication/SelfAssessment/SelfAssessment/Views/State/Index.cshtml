<script type="text/javascript">
    $(document).ready(function () {
        $('#bootstrap-data-table-export').DataTable();

        $('#btnPlus').click(function () {
            $('#txtId').val('');
        });

        $("#text-input").blur(function () {
            $('#text-input_validationMessage').text("");
        });

        $('#btnSave').click(function () {
            var modle = {};
            var id = $('#txtId').val();
            
            if (id != '') {
                model = {
                    StateName: $('#text-input').val(),
                    Id: id
                };
            }
            else {
                model = {
                    StateName: $('#text-input').val()
                };
            }

            if (model.StateName == '' || model.StateName.length <= 0) {
                $('#text-input_validationMessage').text("Please Enter the StateName");
                return false;
            }

            $.ajax({
                type: "POST",
                data: JSON.stringify(model),
                url: API.StateCreate(),
                contentType: "application/json"
            }).done(function (res) {
                if (res == "Success") {
                    $('#text-input').val('');
                    $('#txtId').val('');
                    $('#btnCancel').click();
                    $('#btnCancel').click();

                    location.href =API.StateHome();
                }
            });

        });

    });

    function DoAction(id) {
        var url = API.StateDelete() + id;
        $.ajax({
            type: "GET",
            url: url,
            contentType: "application/json"
        }).done(function (res) {
            location.href = API.StateHome();
        });
    }

    function EditAction(id, name) {
        $('#txtId').val(id);
        $('#text-input').val(name);
    }
</script>

