<script type="text/javascript">
    $(document).ready(function () {
        $('#bootstrap-data-table-export').DataTable();

        $('#btnPlus').click(function () {
            $('#txtId').val('');
            $('#text-input').val('');
        });

        $('#btnSave').click(function () {

            var modle = {};
            var id = $('#txtId').val();

            if (id != '') {              
                model = {
                    SectorName: $('#text-input').val(),
                    Id: id
                };  
            }
            else {
                model = {
                    SectorName: $('#text-input').val()
                };               
            }


            var url = "/Sector/Create";

            $.ajax({
                type: "POST",
                data: JSON.stringify(model),
                url: url,
                contentType: "application/json"
            }).done(function (res) {
                $('#text-input').val('');
                $('#txtId').val('');
                $('#btnCancel').click();
                $('#btnCancel').click();

                location.href = "/Sector/Index";

                });
            });
    
    });

    function DoAction(id) {
         var url = "/Sector/Delete/"+ id;
         $.ajax({
             type: "GET",             
             url: url,
             contentType: "application/json"
         }).done(function (res) {
             location.href = "/Sector/Index";
         });
    }

    function EditAction(id,name) {
        $('#txtId').val(id);
        $('#text-input').val(name);
    }
</script>

