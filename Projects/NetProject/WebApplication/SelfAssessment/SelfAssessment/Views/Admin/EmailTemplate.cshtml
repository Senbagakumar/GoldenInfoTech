<script type="text/javascript">
    $(document).ready(function () {
        $('#bootstrap-data-table-export').DataTable();

        $('#btnPlus').click(function () {
            $('#txtId').val('');
            $('#text-input').val('');
            $('#text-description').val('');
        });

        $("#text-input").blur(function () {
            $('#text-input_validationMessage').text("");
        });
        //text-input_validationMessage, text-description_validationMessage

        $('#btnSave').click(function () {

            var modle = {};
            var id = $('#txtId').val();

            if (id != '') {
                model = {
                    Name: $('#text-input').val(),
                    Description: $('#text-description').val(),
                    Id: id
                };
            }
            else {
                model = {
                    Name: $('#text-input').val(),
                    Description: $('#text-description').val()
                };
            }

            if (model.Name == '' || model.Name.length <= 0) {
                $('#text-input_validationMessage').text("Please select the TemplateName");
                return false;
            }

            if (model.Description == '' || model.Description.length <= 0) {
                $('#text-description_validationMessage').text("Please Enter the Template Description");
                return false;
            }


            $.ajax({
                type: "POST",
                data: JSON.stringify(model),
                url: API.TemplateSave(),
                contentType: "application/json"
            }).done(function (res) {
                $('#text-input').val('');
                $('#txtId').val('');
                $('#text-description').val('');
                $('#btnCancel').click();
                location.href = API.TemplateHome();
            });
        });
    });

    function EditAction(id, name, description) {
        $('#txtId').val(id);
        $('#text-input').val(name);
        $('#text-description').val(description);
    }

    function ViewAction(name, description) {
        $('#lblName').text(name);
        $('#lblDescription').text(description);
    }
</script>

