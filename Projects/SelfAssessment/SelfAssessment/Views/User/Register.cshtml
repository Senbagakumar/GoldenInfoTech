            </p>

        </div>
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {

        $('#Sector').on('change', function () {
            if ($(this).val() == "OTHERS") {
                alert('cmbsector');
                $('#divOthers').show();
                $('#txtSector').show();
            } else {
                alert('txtsector');
                $('#divOthers').hide();
                $('#txtSector').hide();
            }
        });

        $('#SubSector').on('change', function () {
            if ($(this).val() == "OTHERS") {
                alert('cmbsubsector');
                $('#divOthers').show();
                $('#txtSubSector').show();
            } else {
                alert('txtsubsector');
                $('#divOthers').hide();
                $('#txtSubSector').hide();
            }
        });

        $('#btnLogin').click(function () {

            var modle = {};

            var sect = $('#txtSector').val();
            if (sect == '')
                sect = $('#Sector').val();

            var subSect = $('#txtSubSector').val();
            if (subSect == '')
                subSect = $('#SubSector').val();

            model = {
                Name: $('#txtName').val(),
                Address: $('#txtAddress').val(),
                ContactName: $('#txtContactname').val(),
                Designation: $('#txtDesignation').val(),
                Email: $('#txtEmail').val(),
                MobileNo: $('#txtMobileno').val(),
                TypeOfService: $('#TypeOfService').val(),
                City: $('#City').val(),
                State: $('#State').val(),
                Sector: sect,//txtSector, txtSubSector
                SubSector: subSect,
                Revenue: $('#Revenue').val(),
                Type: $('#Type').val()
            };

            var url = "/User/Register";

            alert(subSect);

            $.ajax({
                type: "POST",
                data: JSON.stringify(model),
                url: url,
                contentType: "application/json"
            }).done(function (res) {
                $('#text-input').val('');
                $('#txtId').val('');
                $('#btnCancel').click();
                $('#btnCancel').click();
            });

        });

    });

</script>
